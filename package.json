{
  "name": "vscode-todo",
  "displayName": "vscode-todo",
  "description": "Keep your project and profile TODO lists up to date.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "todoView",
          "name": "%view.todoView.label%"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "todo.addTodo",
          "when": "view == todoView",
          "group": "navigation@1"
        },
        {
          "command": "todo.clearTodos",
          "when": "view == todoView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "todo.addTodo",
          "when": "view == todoView && viewItem == todo:globalRoot",
          "group": "inline"
        },
        {
          "command": "todo.addTodo",
          "when": "view == todoView && viewItem == todo:workspaceFolder",
          "group": "inline"
        },
        {
          "command": "todo.editTodo",
          "when": "view == todoView && viewItem == todo:globalItem",
          "group": "inline@1"
        },
        {
          "command": "todo.editTodo",
          "when": "view == todoView && viewItem == todo:workspaceItem",
          "group": "inline@1"
        },
        {
          "command": "todo.completeTodo",
          "when": "view == todoView && viewItem == todo:globalItem",
          "group": "inline@2"
        },
        {
          "command": "todo.completeTodo",
          "when": "view == todoView && viewItem == todo:workspaceItem",
          "group": "inline@2"
        },
        {
          "command": "todo.removeTodo",
          "when": "view == todoView && viewItem == todo:globalItem",
          "group": "inline@3"
        },
        {
          "command": "todo.removeTodo",
          "when": "view == todoView && viewItem == todo:workspaceItem",
          "group": "inline@3"
        },
        {
          "command": "todo.clearTodos",
          "when": "view == todoView && viewItem == todo:globalRoot",
          "group": "inline@4"
        },
        {
          "command": "todo.clearTodos",
          "when": "view == todoView && viewItem == todo:workspaceFolder",
          "group": "inline@4"
        }
      ]
    },
    "commands": [
      {
        "command": "todo.addTodo",
        "title": "%command.todo.addTodo.title%"
      },
      {
        "command": "todo.editTodo",
        "title": "%command.todo.editTodo.title%"
      },
      {
        "command": "todo.completeTodo",
        "title": "%command.todo.completeTodo.title%"
      },
      {
        "command": "todo.removeTodo",
        "title": "%command.todo.removeTodo.title%"
      },
      {
        "command": "todo.clearTodos",
        "title": "%command.todo.clearTodos.title%"
      }
    ],
    "keybindings": [
      {
        "command": "todo.addTodo",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "!inputFocus"
      },
      {
        "command": "todo.editTodo",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e",
        "when": "!inputFocus"
      },
      {
        "command": "todo.completeTodo",
        "key": "ctrl+alt+enter",
        "mac": "cmd+alt+enter",
        "when": "!inputFocus"
      },
      {
        "command": "todo.removeTodo",
        "key": "ctrl+alt+backspace",
        "mac": "cmd+alt+backspace",
        "when": "!inputFocus"
      },
      {
        "command": "todo.clearTodos",
        "key": "ctrl+alt+shift+backspace",
        "mac": "cmd+alt+shift+backspace",
        "when": "!inputFocus"
      }
    ],
    "configuration": {
      "title": "%configuration.todo.title%",
      "properties": {
        "todo.confirmDestructiveActions": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "%configuration.todo.confirmDestructiveActions.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.16"
  }
}
