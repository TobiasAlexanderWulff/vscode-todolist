{
  "name": "vscode-todolist",
  "displayName": "vscode-todolist",
  "description": "Keep your project and profile TODO lists up to date.",
  "publisher": "TobiasWulff",
  "version": "0.2.1",
  "icon": "resources/store-icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TobiasAlexanderWulff/vscode-todolist.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoContainer",
          "title": "%viewContainer.todo.title%",
          "icon": "resources/activity-icon.svg"
        }
      ]
    },
    "views": {
      "todoContainer": [
        {
          "id": "todoGlobalView",
          "name": "%view.todoGlobal.label%",
          "type": "webview"
        },
        {
          "id": "todoProjectsView",
          "name": "%view.todoProjects.label%",
          "type": "webview",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "menus": {
      "view/item/context": []
    },
    "commands": [
      {
        "command": "todo.addTodo",
        "title": "%command.todo.addTodo.title%",
        "icon": "$(add)"
      },
      {
        "command": "todo.editTodo",
        "title": "%command.todo.editTodo.title%"
      },
      {
        "command": "todo.completeTodo",
        "title": "%command.todo.completeTodo.title%"
      },
      {
        "command": "todo.removeTodo",
        "title": "%command.todo.removeTodo.title%"
      },
      {
        "command": "todo.clearTodos",
        "title": "%command.todo.clearTodos.title%",
        "icon": "$(trash)"
      }
    ],
    "keybindings": [
      {
        "command": "todo.addTodo",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "!inputFocus"
      },
      {
        "command": "todo.editTodo",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e",
        "when": "!inputFocus"
      },
      {
        "command": "todo.completeTodo",
        "key": "ctrl+alt+enter",
        "mac": "cmd+alt+enter",
        "when": "!inputFocus"
      },
      {
        "command": "todo.removeTodo",
        "key": "ctrl+alt+backspace",
        "mac": "cmd+alt+backspace",
        "when": "!inputFocus"
      },
      {
        "command": "todo.clearTodos",
        "key": "ctrl+alt+shift+backspace",
        "mac": "cmd+alt+shift+backspace",
        "when": "!inputFocus"
      }
    ],
    "configuration": {
      "title": "%configuration.todo.title%",
      "properties": {
        "todo.confirmDestructiveActions": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "%configuration.todo.confirmDestructiveActions.description%"
        },
        "todo.autoDeleteCompleted": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "%configuration.todo.autoDeleteCompleted.description%"
        },
        "todo.autoDeleteDelayMs": {
          "type": "number",
          "default": 1500,
          "minimum": 0,
          "markdownDescription": "%configuration.todo.autoDeleteDelayMs.description%"
        },
        "todo.autoDeleteFadeMs": {
          "type": "number",
          "default": 750,
          "minimum": 0,
          "markdownDescription": "%configuration.todo.autoDeleteFadeMs.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-plugin-boundaries": "^5.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-tsdoc": "^0.5.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.16"
  }
}
